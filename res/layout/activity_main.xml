<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/availability_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_video_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/not_available"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/check_video_ad_availability_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/availability_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="@string/check_video_ad_availability" />

    <Button
        android:id="@+id/play_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:enabled="false"
        android:text="@string/play_video" />

</RelativeLayout>
